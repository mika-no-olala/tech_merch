<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewTheme">
        <item name="android:textColor">@color/main_deep_purple</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">33sp</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetBottom">0sp</item>
        <item name="android:insetTop">0sp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/main_deep_purple</item>
        <item name="android:fontFamily">@font/bandera_pro_medium</item>
    </style>

    <style name="button_next" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetBottom">0sp</item>
        <item name="android:insetTop">0sp</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textColor">@color/main_deep_purple</item>
        <item name="android:fontFamily">@font/bandera_pro_medium</item>
    </style>

    <style name="buttonMini" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44sp</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetBottom">0sp</item>
        <item name="android:insetTop">0sp</item>
        <item name="android:background">@drawable/button_neutral</item>
        <item name="android:textColor">@color/pink_antique</item>
        <item name="android:fontFamily">@font/bandera_pro_medium</item>
        <item name="elevation">3sp</item>
    </style>

    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100sp</item>
        <item name="cardCornerRadius">3sp</item>
        <item name="cardElevation">3sp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_marginRight">4sp</item>
        <item name="android:layout_marginLeft">4sp</item>
        <item name="android:layout_marginBottom">11sp</item>
    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">12sp</item>
        <item name="android:editTextColor">@color/main_deep_purple</item>
        <item name="android:textColorHint">@color/light_purple</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">@drawable/dividing_line</item>
    </style>

    <!--  OutletInformationFragment  -->
    <style name="bold_text_info">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/bandera_pro_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">13sp</item>
    </style>

    <style name="regular_text_info">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/bandera_pro</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    request creation    -->
    <style name="listText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/bandera_pro_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:text">@string/text_example</item>
    </style>
</resources>