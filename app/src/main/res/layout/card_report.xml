<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="7sp">
        <TextView
            android:id="@+id/dateInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_for"
            android:fontFamily="@font/bandera_pro_bold"
            android:textSize="14sp"
            android:layout_marginBottom="4sp"/>

        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_example"
            android:fontFamily="@font/bandera_pro_medium"
            android:textSize="14sp"
            android:layout_marginBottom="6sp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/short_example"
            android:fontFamily="@font/bandera_pro_medium"
            android:textSize="14sp"
            android:layout_marginBottom="6sp"/>

        <TextView
            android:id="@+id/created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/short_example"
            android:fontFamily="@font/bandera_pro"
            android:textColor="@color/light_purple"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginBottom="14sp"/>

    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/line"
        android:layout_marginBottom="15sp"/>

</LinearLayout>