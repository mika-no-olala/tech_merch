<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="30sp">

    <TextView
        android:id="@+id/requestLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_is_loading"
        android:layout_gravity="center"
        android:layout_marginVertical="40sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        style="@style/card"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:targetApi="lollipop"
        android:layout_marginBottom="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20sp"
            android:paddingBottom="25sp"
            android:paddingHorizontal="22sp">
            <TextView
                android:id="@+id/code"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/bandera_pro_bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5sp"/>
            <TextView
                style="@style/listText"
                android:id="@+id/created" />
            <TextView
                android:id="@+id/deadline"
                style="@style/listText"/>
            <TextView
                android:id="@+id/status"
                style="@style/listText"/>
            <TextView
                android:id="@+id/appointed"
                style="@style/listText"
                android:layout_marginBottom="10sp"/>
            <TextView
                android:id="@+id/type"
                style="@style/listText"/>
            <TextView
                android:id="@+id/equipmentType"
                style="@style/listText"/>
            <TextView
                android:id="@+id/equipmentSubtype"
                style="@style/listText"/>
            <TextView
                android:id="@+id/work"
                style="@style/listText"/>
            <TextView
                android:id="@+id/replace"
                style="@style/listText"/>
            <TextView
                android:id="@+id/additional"
                style="@style/listText"/>
            <TextView
                android:id="@+id/address"
                style="@style/listText"/>
            <TextView
                android:id="@+id/workSubtype"
                style="@style/listText"/>
            <TextView
                android:id="@+id/special"
                style="@style/listText"/>

            <View
                style="@style/line"
                android:layout_marginBottom="18sp"
                android:layout_marginTop="13sp"/>

            <TextView
                android:id="@+id/comment"
                style="@style/listText"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTMR"
                android:layout_width="match_parent"
                android:layout_height="77sp"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="5sp"
                tools:listitem="@layout/card_image"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTech"
                android:layout_width="match_parent"
                android:layout_height="77sp"
                android:orientation="horizontal"
                android:layout_marginBottom="20sp"
                tools:listitem="@layout/card_image"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/twoButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20sp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/negative"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/reject"
            android:background="@drawable/button_danger"
            android:textColor="@color/white"
            android:layout_marginHorizontal="4sp"
            android:layout_marginEnd="10sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/positive"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/pass"
            android:layout_marginHorizontal="4sp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/technicButton"
        style="@style/button"
        android:text="@string/get_started"
        android:layout_marginHorizontal="4sp"
        android:visibility="gone"/>
</LinearLayout>
